{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web repo Dev",
            "cwd": "apps/repo",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main_development.dart",
            "args": [
                "--target",
                "lib/main_development.dart",
                "-d",
                "chrome",
                "--web-renderer",
                "html",
                "--dart-define",
                "DOMAIN=crm",
                "--web-port",
                "8888"
            ]
        },
        {
            "name": "Web repo Production",
            "cwd": "apps/repo",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main_production.dart",
            "args": [
                "--target",
                "lib/main_production.dart",
                "-d",
                "chrome",
                "--web-renderer",
                "html",
                "--dart-define",
                "DOMAIN=crm",
                "--web-port",
                "8888"
            ]
        },
    ]
}